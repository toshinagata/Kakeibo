{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:webview:allow-print",
    "opener:default",
    "fs:default",
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/kakeibo"
        },
        {
          "path": "$HOME/kakeibo/*"
        }
      ]
    },
    "dialog:default",
    "os:default"
  ]
}