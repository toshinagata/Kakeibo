{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "わたしの家計簿",
  "version": "0.1.0",
  "identifier": "xyz.d-alchemy.kakeibo-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "わたしの家計簿",
        "width": 730,
        "height": 553
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' asset: http://asset.localhost blob: data:"
      }
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
